<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/r"
        tools:ignore="ContentDescription" />


    <EditText
        android:id="@+id/Suname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/imageView1"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_gradient"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Enter your full name "
        android:textColor="#fff"
        android:textColorHint="#FFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/SuEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Suname"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_gradient"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Enter your valid email"
        android:textColor="#fff"
        android:textColorHint="#FFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/SuUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/SuEmail"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_gradient"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Create your Password"
        android:textColor="#fff"
        android:textColorHint="#FFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/SuPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/SuUsername"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_gradient"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Confirm your Password"
        android:textColor="#fff"
        android:textColorHint="#FFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <Button
        android:id="@+id/btnSignUp1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/SuPass"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradient"
        android:text="Register as new User"
        android:textColor="#FFF"
        android:textSize="23sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>